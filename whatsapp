<body>
    <div class="container">
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/WhatsApp.svg/1024px-WhatsApp.svg.png" alt="WhatsApp Logo" />
        </div>
        <h2>Open WhatsApp Chat</h2>
        <label for="mobile">Enter Mobile Number (with country code):</label>
        <input type="text" id="mobile" placeholder="+1234567890" aria-label="Mobile Number">
        <button onclick="openWhatsApp()">Open WhatsApp</button>
    </div>

    <script>
        function openWhatsApp() {
            const mobile = document.getElementById('mobile').value.trim();
            
            // Basic validation
            const isValidNumber = /^\+?\d{7,15}$/.test(mobile); // Allows numbers with optional '+' and length between 7-15 digits
            
            if (isValidNumber) {
                const url = `https://wa.me/${mobile.replace(/\+/g, '')}`; // Remove '+' for URL compatibility
                window.open(url, '_blank'); // Opens in a new tab
            } else {
                alert('Please enter a valid mobile number in international format (e.g., +1234567890).');
            }
        }
    </script>
